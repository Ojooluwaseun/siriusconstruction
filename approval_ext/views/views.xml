<odoo>
  <data>
    <record id="approval_ext_form" model="ir.ui.view">
        <field name="name">approval_extention_form</field>
        <field name="model">approval.request</field>
        <field name="inherit_id" ref='approvals.approval_request_view_form' />
        <field name="arch" type="xml">
             <xpath expr="//field[@name='name']" position="before">
                <div class="oe_title">
                        <label for="unique_id" class="oe_edit_only"/>
                        <h1>
                            <field name="unique_id" readonly = "1"/>
                        </h1>
                    </div>
            </xpath>
            <xpath expr="//field[@name='request_owner_id']" position="after">
                <field name="department_id" />
            </xpath>
             <xpath expr="//field[@name='category_id']" position="after">
                <field name="location_id" />
            </xpath>
        </field>
    </record>
  </data>
</odoo>