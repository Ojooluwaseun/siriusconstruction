<odoo>
  <data>
    <record id="approval_ext_form" model="ir.ui.view">
        <field name="name">approval_extention_form</field>
        <field name="model">approval.request</field>
        <field name="inherit_id" ref='approvals.approval_request_view_form' />
        <field name="arch" type="xml">
             <xpath expr="//field[@name='name']" position="before">
                <div class="oe_title">
                        <h1>
                            <field name="unique_code" readonly='1'/>
                        </h1>
                    </div>
            </xpath>
            <xpath expr="//field[@name='request_owner_id']" position="after">
                <field name="department_id" />
            </xpath>
             <xpath expr="//field[@name='category_id']" position="after">
                <field name="location_id" />
            </xpath>
        </field>
    </record>
      
    <record id="department_ext_form" model="ir.ui.view">
        <field name="name">department_extention_form</field>
        <field name="model">hr.department</field>
        <field name="inherit_id" ref='hr.view_department_form' />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='manager_id']" position="after">
                <field name="department_code" />
            </xpath>
        </field>
    </record>
      
    <record id="approval_sequence" model="ir.sequence">
        <field name="name">Approval Sequence</field>
        <field name="code">approval.sequence</field>
        <field name="active">TRUE</field>
        <field name="padding">4</field>
        <field name="number_next">1</field>
        <field name="number_increment">1</field>
    </record>
  </data>
</odoo>